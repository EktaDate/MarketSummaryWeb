                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Market Summary Application", "Index", "Item", new { area = "" }, new { @class = "navbar-brand" })                 
            </div>            
        </div>
